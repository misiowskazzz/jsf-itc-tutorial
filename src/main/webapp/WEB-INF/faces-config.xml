<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
              version="2.1">

    <lifecycle>
        <phase-listener>pl.itcrowd.jsf.tutorial.phases.PhaseListener</phase-listener>
    </lifecycle>

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>pl</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/appUserList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>successfully_added</from-outcome>
            <to-view-id>/userAdded.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>

